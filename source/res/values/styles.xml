<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_dark</item>
        <item name="colorPrimaryDark">@color/black_dark_1</item>
        <item name="colorAccent">@color/black_dark_5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black_dark</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/purple_1</item>
        <item name="colorAccent">@color/black_dark_1</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">@color/black_dark</item>
        <item name="colorControlNormal">@color/black_dark</item>
    </style>

    <style name="Toolbar.TitleText.edit" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_dark_1</item>
    </style>

    <style name="Toolbar.SubTitleText.edit" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_dark_4</item>
    </style>

    <style name="CustomAppTheme_textinputLayout" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorAccent">@color/black_dark_1</item>
        <item name="android:textColorHint">@color/black_dark_1</item>
        <item name="colorControlNormal">@color/black_dark_1</item>
        <item name="colorControlActivated">@color/green_1</item>
        <item name="colorControlHighlight">@color/yellow_1</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="material_tabLayout_textAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="personage_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black_dark_1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="personage_status_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="personage_status_layout_gravatar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="personage_status_gravatar">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="list_text">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_dark_1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_text_title">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_dark_1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="list_text_subtitle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_dark_7</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_text_value">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/black_dark_1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_text_next">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="divider_line_half">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/black_dark_1</item>
    </style>

    <style name="divider_line_half_half">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/black_dark_1</item>
    </style>

    <style name="divider_line_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/white_dark_1</item>
    </style>

    <style name="divider_line_match_wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/white_dark_1</item>
    </style>

    <style name="divider_line_match_wide_lager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/white_dark_1</item>
    </style>

    <style name="divider_line_match_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/white_dark_1</item>
    </style>

    <style name="common_vertical_division_line_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#dddddd</item>
    </style>
</resources>
